@using System.Net
@using System.Web
@code {
    [Parameter]
    public List<string> Blobs { get; set; } = new();
}

<link rel="stylesheet" href="/style.css" />

<form action="/upload" method="post" enctype="multipart/form-data" style="margin-bottom:2em;">
    <label for="file">Upload file:</label>
    <input type="file" id="file" name="file" required />
    <button type="submit">Upload</button>
</form>

<div class="gallery">
    @foreach (var name in Blobs)
    {
        var thumbUrl = $"/images/{System.Web.HttpUtility.UrlEncode(name)}";
        var previewUrl = $"/preview/{System.Web.HttpUtility.UrlEncode(name)}";
        <div class="gallery-item">
            <a href="@previewUrl" title="Preview">
                <img src="@thumbUrl" alt="@name" />
            </a>
            <form method="post" action="/delete" onsubmit="return confirm("Delete @name?")">
                <input type="hidden" name="file" value="@name" />
                <button type="submit">Delete</button>
            </form>
        </div>
    }
</div>
