@using Microsoft.AspNetCore.Components.Forms
@using static System.Web.HttpUtility

@code {
    [Parameter]
    public List<string> Blobs { get; set; } = [];
}

<link rel="stylesheet" href="/style.css" />

<form action="/upload" method="post" enctype="multipart/form-data" style="margin-bottom:2em;">
    <AntiforgeryToken />
    <label for="file">Upload file:</label>
    <input type="file" id="file" name="file" required />
    <button type="submit">Upload</button>
</form>

<div class="gallery">
    @foreach (var name in Blobs)
    {
        var thumbUrl = $"/images/{UrlPathEncode(name)}";
        var previewUrl = $"/preview/{UrlPathEncode(name)}";
        <div class="gallery-item">
            <a href="@previewUrl" title="Preview">
                <img src="@thumbUrl" alt="@name" />
            </a>
            <form method="post" action="/delete" onsubmit="return confirm('Delete @name?')">
                <AntiforgeryToken />
                <input type="hidden" name="file" value="@name" />
                <button type="submit">Delete</button>
            </form>
        </div>
    }
</div>
